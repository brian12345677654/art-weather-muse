generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ArtStyle {
  id              Int    @id @default(autoincrement())
  name            String
  outfitAdvice    String
  colorPalette    String
  artistReference String
  weatherCondition String // e.g., "Clear", "Rain", "Cloudy", "Windy", "Snow"
}
